{% block _annonce_images_widget %} <!-- on définit l'affichage du champ ad_images -->
    <p>Ici, vous pouvez afficher vos propres images.</p>
    {{ form_widget(form) }} <!-- la valeur de la variable de block "form" n'est pas la même en fonction du block ! Ici "form" représente la variable annonce_images -->

    <input type="hidden" id="widgets-counter" value="0">

    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-primary">Ajouter une image</button>
    </div>
{% endblock %}

{% block _annonce_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _annonce_images_entry_widget %} <!-- entrées de la collection -->
    <div class="form-group" id="block_{{ id }}"> <!-- id est une variable qui existe au sein de ce block -->
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.url) }}
                        {{ form_errors(form.url) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.caption) }}
                        {{ form_errors(form.caption) }}
                    </div>
                </div>
            </div>
            <div class="col-2">
                <button type="button" class="btn btn-danger" data-action="delete" data-target="#block_{{ id }}">X</button>
            </div>
        </div>
    </div>
{% endblock %}